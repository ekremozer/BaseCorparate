@using BaseCorporate.Service.Helper
@using BaseCorporate.Utility.Helper
@using BaseCorporate.Web.Helper
@{ var model = TopicHelper.GetWithSlug("iletisim");}

@{Layout = "~/Themes/Basic/Views/Shared/_Layout.cshtml";}
@section Head{@await Html.PartialAsync("_Head", model.Head)}


<section id="main_content">
    @await Html.PartialAsync("_BreadCrumb", ExtensionMethods.GetBreadCrumbListElement($"/{model.Slug}", $"{model.Title}", "2"))
    <article>
        <h1>@(model.Title)</h1>
        <time datetime="@(model.CreatedAt)" class="by-line">@(model.CreatedAt.ToString("dd.MM.yyyy"))</time>
        @Html.Raw(model.Body)
    </article>
</section>