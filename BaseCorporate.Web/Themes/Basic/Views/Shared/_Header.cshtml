@using BaseCorporate.Web.Helper
@{
    var headerMenu = MenuHelper.GetMenuGroup("header");
}
<header>
    <div class="tac">
        <h1>ekrem özer</h1>
        <small>her yerde olan şeyler.</small>
        <div class="header">
            <input class="menu-btn" type="checkbox" id="menu-btn" />
            <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
            <ul class="menu">
                @foreach (var menuItems in headerMenu.Items)
                {
                    <li><a href="@menuItems.Link">@menuItems.Name</a></li>
                }
            </ul>
        </div>
    </div>
</header>