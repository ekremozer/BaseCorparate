@using BaseCorporate.Service.Helper
@using BaseCorporate.Utility.Helper
@model BaseCorporate.Service.Model.TopicModel

@{Layout = "~/Views/Shared/_Layout.cshtml";}
@section Head{@await Html.PartialAsync("_Head", Model.Head)}

@await Html.PartialAsync("_BreadCrumb", ExtensionMethods.GetBreadCrumbListElement($"/{Model.Slug}", $"{Model.Title}", "2"))
<section>
    <article>
        <div class="container">
            <div class="row">
                <div class="col-12 case-details-title">
                    <h1>@Model.Title</h1>
                    <p><date>@Model.CreatedAt.ToString("dd.MM.yyyy")</date></p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 case-details-comment">
                    @*<img class="w-100" src="/assets/images/article/@Model.Image" alt="case-image">*@
                    @Html.Raw(Model.Body)
                </div>
            </div>
        </div>
    </article>
</section>